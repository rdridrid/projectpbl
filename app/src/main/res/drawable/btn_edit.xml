<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <corners
                android:radius="10dp" />
            <solid
                android:color="@color/drakgray" />
            <size
                android:width="32dp"
                android:height="32dp" />

        </shape>
    </item>

    <!-- pressed -->


    <item android:state_focused="true">
        <shape>
            <corners
                android:radius="10dp" />
            <solid
                android:color="@color/drakgray" />
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>
    <!-- focused -->


    <item>
        <shape>
            <corners
                android:radius="10dp" />
            <solid
                android:color="#00000000" />
            <size
                android:width="32dp"
                android:height="32dp" />
        </shape>
    </item>
    <!-- default -->
</selector>