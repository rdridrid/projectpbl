<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/post_design"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/default_posttitle_postitem"
            android:layout_width="wrap_content"
            android:layout_height="23dp"

            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/lineseedkr_bd"
            android:text="포스트 타이틀"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/default_cardView"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/default_posttitle_postitem">

            <ImageView
                android:id="@+id/default_postlist_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/profilebg" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/default_posttext_postitem"
            android:layout_width="345dp"
            android:layout_height="110dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="23dp"
            android:background="@drawable/text_post"
            android:fontFamily="@font/lineseedkr_rg"
            android:gravity="top"
            android:lineSpacingExtra="5dp"
            android:padding="7dp"
            android:text="@string/posttext_test"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/default_cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
