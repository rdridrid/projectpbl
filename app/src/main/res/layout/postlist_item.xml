<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#E6E6E6"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profileimage_postitem"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/defaultprofileimage" />

        <TextView
            android:id="@+id/username_postitem"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="이름 들어갈곳"
            app:layout_constraintBottom_toTopOf="@+id/email_postitem"
            app:layout_constraintStart_toEndOf="@+id/profileimage_postitem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email_postitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_weight="1"
            android:text="email"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/profileimage_postitem"
            app:layout_constraintTop_toBottomOf="@+id/username_postitem" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/posttitle_postitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title" />

        <ImageView
            android:id="@+id/postimage_postitem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/posttext_postitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="본문" />
    </LinearLayout>
</LinearLayout>


